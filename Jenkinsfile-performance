pipeline {
    agent {
        docker {
            image 'blazemeter/taurus'
            args  '--net="mynet"'
        }
    }

    stages {
        stage('Build') {
            steps {
                // Get some code from a GitHub repository
		checkout scm
                
                sh "ls; cd performance; ls ; cat performance.yaml; bzt performance.yaml -report"
		}
                
            }
	stage ('report'){
		steps {
        		catchError( stageResult: 'FAILURE') {
            			perfReport filterRegex: '', sourceDataFiles: '**/stats.xml'
        	}
        }
      }
           
        } 
   }
