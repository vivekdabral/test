pipeline {
    agent any

    tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "M3"
    }

    stages {
        stage('Build') {

		checkout scm
            steps {
              

                sh "pwd"
                sh "ls"
                                
                sh "cd word-count-api; mvn clean install"

            }
        }
        stage('Run word-count-api') {
            steps {
                                         

                // Runs the api using docker file
                
                sh "cd word-count-api; docker run -d -p 8082:8081 --name=app --network mynet docker-word"
                
            }

            
        }
    }
}
